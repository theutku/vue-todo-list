{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"declaration": false,
		"noImplicitAny": false,
		"removeComments": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"moduleResolution": "node",
		"allowJs": true,
		"sourceMap": true,
		"listFiles": false,
		"outDir": "./bin",
		"rootDir": "src",
		"lib": [
			"es2017",
			"dom"
		]
	},
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"./node_modules/**/*"
	]
}